{
  "manifest_version": 2,
  "name": "PriceX",
  "version": "0.1",
  

  "description": "PriceX...",

  "icons": {
    "16": "icon/128.jpg",
    "32": "icon/128.jpg",
    "48": "icon/128.jpg",
    "128": "icon/128.jpg"
  },

  "content_scripts": [{
    "matches": [ "*://*/*" ],
    "js": [ "scripts/content.js" ]
  }],

  "background": {
    "scripts": ["scripts/background.js"],
    "persistent": false
  },

  "permissions": [
    "tabs",
    "activeTab",
    "<all_urls>"
  ],

  "content_scripts":[{
    "matches": [
      "http://*/*",
      "https://*/*"
    ],
    "js": [
        "scripts/content.js"
    ]
  }],

  "browser_action": {
    "default_title": "PriceX",
    "default_icon": "icon/128.jpg",
    "default_popup": "popup.html"
  }
}